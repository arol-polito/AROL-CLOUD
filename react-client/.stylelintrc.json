{
  "plugins": ["stylelint-scss"],
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "property-no-unknown": [true, { "ignoreProperties": ["icon-font"] }],
    "value-no-vendor-prefix": [true, { "ignoreValues": ["fill-available"] }],
    "property-no-vendor-prefix": [true, { "ignoreProperties": ["box-decoration-break"] }],
    "selector-class-pattern": null,
    "scss/dollar-variable-pattern": null,
    "no-descending-specificity": null
  },
  "ignoreFiles": ["src/styles/aem-grid.css"]
}
